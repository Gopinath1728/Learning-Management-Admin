<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".ui.view_teachers.TeacherProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linear_layout_tcr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_teacher_data"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_teacher_icon"
                android:layout_gravity="center_horizontal"/>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Personal Details:"
                    android:textSize="25sp"
                    android:fontFamily="@font/hvd"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:padding="3dp"/>

            </TableRow>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:orientation="vertical">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Teacher Uid:"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:fontFamily="@font/hvd"/>

                    <TextView
                        android:id="@+id/txt_teacher_data_Uid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Teacher Uid"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/hvd"/>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Teacher Name:"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:fontFamily="@font/hvd"/>

                    <TextView
                        android:id="@+id/txt_teacher_data_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Teacher Name"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/hvd"/>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Teacher Email:"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:fontFamily="@font/hvd"/>

                    <TextView
                        android:id="@+id/txt_teacher_data_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Teacher Email"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/hvd"/>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Proctor Class:"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:fontFamily="@font/hvd"/>

                    <TextView
                        android:id="@+id/txt_teacher_data_proctor_class"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Teacher Class"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/hvd"/>

                </TableRow>



                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Teacher Address:"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:fontFamily="@font/hvd"/>

                    <TextView
                        android:id="@+id/txt_teacher_data_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Teacher Address"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/hvd"/>

                </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Teacher Phone:"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:fontFamily="@font/hvd"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_teacher_data_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Teacher Phone"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:layout_marginStart="5dp"
                            android:fontFamily="@font/hvd"/>

                        <ImageButton
                            android:id="@+id/btn_call_teacher"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_baseline_call_24"
                            android:layout_gravity="end"
                            android:layout_marginStart="5dp"
                            android:background="@color/white"
                            />

                    </LinearLayout>



                </TableRow>

            </TableLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Classes Teaching:"
                android:layout_marginTop="10dp"
                android:textSize="25sp"
                android:fontFamily="@font/hvd"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:padding="3dp"/>


        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_teaching_classes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/linear_layout_tcr" />

        <TextView
            android:id="@+id/txt_teaching_no_class"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="None"
            android:textAlignment="center"
            android:layout_below="@id/linear_layout_tcr"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:fontFamily="@font/hvd"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:padding="3dp"/>

    </RelativeLayout>

</ScrollView>