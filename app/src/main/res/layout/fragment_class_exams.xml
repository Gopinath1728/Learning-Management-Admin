<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.view_classes.view_class_data.view_class_exams.ClassExamsFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_examinations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_no_exams"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No Record Found !"
        android:textSize="25sp"
        android:fontFamily="@font/hvd"
        android:layout_centerInParent="true"
        android:textColor="@color/black"
        android:textAlignment="center"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_exam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_white_add_24"
        app:tint="@color/white"
        android:contentDescription="@string/menu_add_exams" />

</RelativeLayout>